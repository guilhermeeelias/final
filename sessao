sessaoLIST = []


def criar_sessao(cod_sessao, cod_filme, cod_sala,horario):
    sessao = [cod_sessao, cod_filme, cod_sala,horario]
    sessaoLIST.append(sessao)

def listar_filmes():
    return sessaoLIST

def verificar_lotacao(cod_sessao):
    for p in sessaoLIST:
        if (p[0] == 'lotado'):
            return ('Sessao lotada')
    return None
#ARRUMAR LAÇO



def remover_sessao(cod_sessao):
    for p in filme:
        if (p[0] == cod_sessao):
            sessaoLIST.remove(p)
            return True
    return False


def remover_todos_ingressos():
    global ingresso
    ingresso = []
